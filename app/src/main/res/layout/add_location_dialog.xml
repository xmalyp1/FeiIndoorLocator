<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_vertical_margin"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_block"
            android:layout_weight="1"
            android:hint="Block..."
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/input_floor"
            android:layout_weight="1"
            android:hint="Floor..."
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
             />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <Button
            android:text="Add location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:padding="@dimen/db_handler_btn_padding_h"
            android:drawableLeft="@drawable/ic_add_circle_white_24dp"
            android:drawablePadding="@dimen/db_handler_btn_padding_h"
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_add_location"
            android:background="@color/colorPrimaryDark" />
    </RelativeLayout>

</LinearLayout>